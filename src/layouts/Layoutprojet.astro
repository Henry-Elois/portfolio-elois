---
import Fleur from "../components/Fleur.astro";
import "../style/global.css";

interface Props {
  title: string;
  categorie?: string;
  description?: string;
}

const {
  title,
  categorie = "Projet",
  description = "Portfolio d'Eloïs Henry - Communicante et UX designer",
} = Astro.props;

const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="author" content="Eloïs Henry" />

    <link rel="icon" type="image/svg+xml" href="/fleur.svg" />
  </head>

  <body class="bg-base-100 text-base-content leading-relaxed">
    <header class="py-8 px-6 relative">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <a
          href="/projets"
          class="inline-flex items-center gap-2 px-6 py-3 bg-black text-white rounded-full font-semibold hover:bg-primary transition-all duration-300"
          aria-label="Retour aux projets"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 19l-7-7 7-7"></path>
          </svg>
          Retour
        </a>

        <div class="flex items-center justify-center">
          <Fleur
            petal="#ffc700"
            centre-fleur="#fAFAFA"
            size="56"
          />
        </div>
        <div
          class="px-6 py-2 border-2 border-black rounded-full font-bold text-sm uppercase tracking-wide"
        >
          {categorie}
        </div>
      </div>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <footer class="py-12 mt-20 px-6 bg-gray-900 text-white">
      <div class="max-w-7xl mx-auto">
        <div
          class="flex flex-col md:flex-row items-center justify-between gap-6"
        >
          <div class="flex items-center gap-4">
            <Fleur petal="#FFD700" centre-fleur="#FFFFFF" size="48" />
            <p class="text-sm">© {currentYear} - Eloïs Henry</p>
          </div>

          <div class="flex gap-4">
            <a href="/" class="text-sm hover:text-primary transition-colors"
              >Accueil</a
            >
            <a
              href="/projets/projets"
              class="text-sm hover:text-primary transition-colors">Projets</a
            >
            <a
              href="/contact"
              class="text-sm hover:text-primary transition-colors">Contact</a
            >
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
