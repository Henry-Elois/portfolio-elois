---
interface Props {
  nom: string;
  icone?: string;
  description: string;
  nom_logiciel?: string;
  couleurBordure?: string;
}

const {
  nom,
  icone,
  description,
  nom_logiciel,
  couleurBordure = "primary",
} = Astro.props;

const couleurClasses = {
  primary: "border-primary bg-primary/5",
  secondary: "border-secondary bg-secondary/5",
  accent: "border-accent bg-accent/5",
  warning: "border-warning bg-warning/5",
};

---

<div
  class={`card ${couleurClasses[couleurBordure]} border-3 rounded-3xl p-4 h-full shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1`}
>
  <div class="flex items-start gap-3">
    {
      icone && (
        <div class="w-12 h-12 flex-shrink-0 bg-base-100 rounded-xl p-2 shadow-sm">
          <img
            src={icone}
            alt={`Logo ${nom}`}
            class="w-full h-full object-contain"
          />
        </div>
      )
    }
    <div class="flex-1 min-w-0">
      <div class="flex items-center gap-2 mb-1">
        <h4 class="text-lg font-bold truncate">{nom}</h4>

      </div>
      <p class="text-xs text-gray-600 line-clamp-2 leading-relaxed">
        {description}
      </p>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
