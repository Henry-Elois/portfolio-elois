---
const { projet, href } = Astro.props || {};
const POCKETBASE_URL =
  import.meta.env.PUBLIC_POCKETBASE_URL || "http://127.0.0.1:8090";


const imageFile = projet?.image_card;
const collectionId = projet?.collectionId ?? "projets";
const imageUrl = imageFile
  ? `${POCKETBASE_URL}/api/files/${collectionId}/${projet.id}/${imageFile}`
  : "/placeholder-project.png"; 

const title = projet?.titre ?? projet?.title ?? "Projet";
const description = projet?.description ?? projet?.description_2 ?? "";
const target = href ?? `/projets/${projet?.id ?? ""}`;
---

<a class="block" href={target} aria-label={`Voir ${title}`}>
  <div
    class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow w-full"
  >
    <figure class="overflow-hidden rounded-t-lg">
      <img
        src={imageUrl}
        alt={title}
        class="h-48 object-cover transition-all duration-500"
      />
    </figure>
    <div class="card-body p-6">
      <h4 class="card-title text-xl md:text-2xl">{title}</h4>
      <p class="text-sm text-gray-700 line-clamp-3">{description}</p>
      <div class="card-actions justify-end mt-4">
        <button class="btn btn-primary">Voir le projet</button>
      </div>
    </div>
  </div>
</a>
